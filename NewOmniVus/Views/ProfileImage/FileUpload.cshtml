


@model KristofferNowen_OmniVus.Models.Fileupload.ProfileImageUploadForm

@{
    ViewData["Title"] = "FileUpload";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h4>Would you like to upload your Profile Image</h4>
<hr />
<div class="row">
    <div class="col-6 offset-3">
        <form asp-action="FileUpload" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="File" class="form-label"></label>
                <input asp-for="File" class="form-control" type="file">
                <span asp-validation-for="File" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="submit" value="Upload Image" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div class="col-6 offset-3">
    <a asp-controller="Home" asp-action="Index">Go to next page</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

