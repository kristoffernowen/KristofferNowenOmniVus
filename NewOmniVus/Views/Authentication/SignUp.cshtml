@model SignUpModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}




<div class="text-center">
    <h2>Sign Up</h2>
    <p>Create an account.</p>
</div>
<form id="signup-form" asp-action="SignUp" class="row" > 
    @* asp-route-returnUrl="@Model.ReturnUrl"  *@
    <div class="col-12 p-0">
        <input asp-for="FirstName"  type="text" class="col-8 offset-2 p-3 mt-5 " placeholder="Enter your firstname" >
        <span  asp-validation-for="FirstName" class=" ps-2 text-danger"></span>
    </div>
    <div class="col-12 p-0">
        <input asp-for="LastName"  type="text" class="col-8 offset-2 p-3 mt-5 " placeholder="Enter your lastname" >
        <span  asp-validation-for="LastName" class=" ps-2 text-danger"></span>
    </div>
    <div class="col-12 p-0">
        <input asp-for="AddressLine" type="text" class="col-8 offset-2 p-3 mt-5 " placeholder="Enter your streetaddress"/>
    </div>
    <div class="col-12 p-0">
        <input asp-for="PostalCode" type="text" class="col-8 offset-2 p-3 mt-5 " placeholder="Enter your postalcode"/>
    </div>
    <div class="col-12 p-0">
        <input asp-for="City" type="text" class="col-8 offset-2 p-3 mt-5 " placeholder="Enter your city"/>
    </div>
    <div class="col-12 p-0">
        <input asp-for="Email" id="signup-email" type="text" class="col-8 offset-2 p-3 mt-5 " placeholder="Enter your email" >
        <span id="signup-email-error" asp-validation-for="Email" class=" ps-2 text-danger"></span>
    </div>
    <div class="d-flex justify-content-center col-12">
        <input asp-for="Password" type="password" class="col-md-4 p-3 me-2 mt-5" placeholder="Enter your password" >

        <input asp-for="ConfirmPassword" type="password" class="col-md-4 p-3 ms-2 mt-5" placeholder="Confirm your password">
    </div>
    <div class="d-flex justify-content-between px-3 col-8 offset-2 ">
        <div class="col-4 ">
            <span asp-validation-for="Password" class=" ps-2 text-danger"></span>
        </div>
        <div class="col-6 ">
            <span asp-validation-for="ConfirmPassword"  class="text-start text-danger ms-3 ps-3"></span>
        </div>
    </div>
            
    <div asp-validation-summary="ModelOnly"  class="text-danger d-flex justify-content-center m-3"></div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="button-omni">Sign Up</button>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

