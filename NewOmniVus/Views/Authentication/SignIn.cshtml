@model SignInModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}




<div class="text-center">
    <h2>Log In</h2>
    <p>Log in to your account. No account? Sign up <a asp-controller="Authentication" asp-action="SignUp">here</a></p>
</div>
<form id="login-form" asp-action="SignIn" asp-route-returnUrl="@Model.ReturnUrl">
    <div class="d-flex">
        <input id="login-email" asp-for="Email" type="text" class="col-6 p-3 me-2 mt-5" placeholder="Enter your email">
        <input id="login-password" asp-for="Password" type="password" class="col-6 p-3 ms-2 mt-5" placeholder="Enter your password">
    </div>
    <div class="d-flex justify-content-between px-3">
        <div class="col-6 ">
            <span asp-validation-for="Email" id="login-email-error" class=" ps-2 text-danger"></span>
        </div>
        <div class="col-6 ">
            <span asp-validation-for="Password" id="login-password-error" class="text-start text-danger ms-3 ps-3"></span>
        </div>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger d-flex justify-content-center m-3"></div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="button-omni">Log In</button>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

