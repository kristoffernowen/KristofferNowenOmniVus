@model IEnumerable<NewOmniVus.Models.Profiles.AppUserProfileEntity>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1 class="text-light text-center">Profiles</h1>

<div class="d-flex justify-content-between">
    <div class=" text-light d-flex justify-content-center col-3 pt-3">
        <p>Name</p>
        
    </div>
    <div class=" text-light d-flex justify-content-center col-3 pt-3">
        <p>Email</p>
        
    </div>
    <div class="  d-flex justify-content-between col-3 pt-3">
        
    </div>
</div>

@foreach (var item in Model)
{
    <div class="p-box d-flex justify-content-between my-4">
        <div class="text-light d-flex justify-content-center align-items-center col-3">
            
            <div><p class="pt-3">@item.FirstName @item.LastName</p></div>
        </div>
        <div class="text-light d-flex justify-content-center align-items-center col-3">
            
            <div><p class="pt-3">@item.UserEmail</p></div>
        </div>
        <div class="text-light d-flex justify-content-around align-items-center col-3">
            <a asp-controller="Profile" asp-action="Details" asp-route-id="@item.Id" class="no-deco-a">Details</a> 
            <a asp-controller="Profile" asp-action="Edit" asp-route-id="@item.Id" class="no-deco-a">Edit</a> 
            <a asp-controller="Profile" asp-action="Delete" asp-route-id="@item.Id" class="no-deco-a">Delete</a>
            
        </div>
    </div>
    
}
<div class="col-12">
    <div class="d-flex justify-content-center">
        <button class="button-omni my-3"><a asp-controller="Home" asp-action="Index">Home</a></button>
    </div>
</div>