@model NewOmniVus.Models.Profiles.EditAppUserProfile
@{
    ViewData["Title"] = "Edit profile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="col-8 offset-2">
    <div class="d-flex justify-content-around m-3 text-light">
        <h3>@User.FindFirst("DisplayName").Value </h3>
        <h3>signed in as a @User.FindFirst("Role").Value </h3>
    </div>
</div>
<form id="signup-form" asp-action="Edit" asp-route-returnUrl="@Model.ReturnUrl" >
       
    <div>
        <input asp-for="FirstName"  type="text" class="col-8 offset-2 p-3 mt-5 " placeholder="@Model.FirstName" >
        <span  asp-validation-for="FirstName" class=" ps-2 text-danger"></span>
    </div>
    <div>
        <input asp-for="LastName"  type="text" class="col-8 offset-2 p-3 mt-5 " placeholder="@Model.LastName" >
        <span  asp-validation-for="LastName" class=" ps-2 text-danger"></span>
    </div>
    <div >
        <input asp-for="AddressLine" class="col-8 offset-2 p-3 mt-5 " placeholder="@Model.AddressLine"/>
    </div>
    
    <div >
        <input asp-for="PostalCode" type="text" class="col-8 offset-2 p-3 mt-5 " placeholder="@Model.PostalCode"/>
    </div>
    <div >
        <input asp-for="City" type="text" class="col-8 offset-2 p-3 mt-5 " placeholder="@Model.City"/>
    </div>
    <div>
        <input asp-for="Email" id="signup-email" type="text" class="col-8 offset-2 p-3 mt-5 " placeholder="@Model.Email" >
        <span id="signup-email-error" asp-validation-for="Email" class=" ps-2 text-danger"></span>
    </div>
    
    
            
    <div asp-validation-summary="ModelOnly"  class="text-danger d-flex justify-content-center m-3"></div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="button-omni">Sign Up</button>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
