@model NewOmniVus.Models.Profiles.AppUserProfileEntity
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}




<div class="col-8 offset-2">
    <div class="d-flex justify-content-around m-3 text-light">
        <h3>@User.FindFirst("DisplayName").Value </h3>
        <h3>signed in as a @User.FindFirst("Role").Value </h3>
    </div>
</div>

       
<div>
    <p class="col-8 offset-2 p-3 mt-5 p-box"  >@Model.FirstName </p>
</div>
<div>
    <p class="col-8 offset-2 p-3 mt-5 p-box"  > @Model.LastName</p>
</div>
<div >
    <p class="col-8 offset-2 p-3 mt-5 p-box" >@Model.Address.AddressLine</p>
</div>
    
<div >
    <p class="col-8 offset-2 p-3 mt-5 p-box" >@Model.Address.PostalCode</p>
</div>
<div >
    <p class="col-8 offset-2 p-3 mt-5 p-box" > @Model.Address.City</p>
</div>
<div>
    <p class="col-8 offset-2 p-3 mt-5 p-box"  >@Model.UserEmail </p>
</div>

<div class=" col-8 offset-2">
    
   
        @if (User.IsInRole("Admin"))
        {
            <div class="d-flex  justify-content-between">
                <button class="button-omni my-3"><a asp-controller="Profile" asp-action="Index">Back to overview</a></button>
                <button class="button-omni my-3"><a asp-controller="Home" asp-action="Index">Home</a></button>
            </div>
        }
        else
        {
            <div class="d-flex justify-content-center">
                <button class="button-omni my-3"><a asp-controller="Home" asp-action="Index">Home</a></button>
            </div>
        }
    
</div>

