@model SignUpModel

@{
    ViewData["Title"] = "Registrera konto";
}



<section id="signup-section" class="log-section">
    <div class="small-container">
        <div class="text-center">
            <h2>Sign Up</h2>
            <p>Create an account.</p>
        </div>
        <form id="signup-form" asp-action="SignUp" >
            <input asp-for="Email" id="signup-email" type="text" class="col-8 offset-2 p-3 mt-5 " placeholder="Enter your email" >
            <div class="d-flex justify-content-center">
                <input asp-for="Password" type="text" class="col-md-4 p-3 me-2 mt-5" placeholder="Enter your password" >
                
                <input asp-for="ConfirmPassword" type="text" class="col-md-4 p-3 ms-2 mt-5" placeholder="Confirm your password">
            </div>
            <div class="d-flex justify-content-between px-3 col-8 offset-2">
                <div class="col-4 ">
                    <p id="signup-email-error" class=" ps-2 text-danger">error</p>
                </div>
                <div class="col-6 ">
                    <p id="signup-password-error" class="text-start text-danger ms-3 ps-3">error</p>
                </div>
            </div>
            <div asp-validation-summary="ModelOnly"  class="text-danger d-flex justify-content-center m-3"></div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="button-omni">Sign Up</button>
            </div>
               
        </form>
    </div>
</section>
